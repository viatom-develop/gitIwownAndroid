<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:minHeight="40dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:textSize="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/first_1"
        android:text=""
        android:typeface="serif"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time"
        android:textSize="14dp"
        app:layout_constraintLeft_toRightOf="@id/title"
        app:layout_constraintBottom_toBottomOf="@id/title"
        android:layout_marginLeft="10dp"
        android:text=""
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/first_1"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:text=""
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/second"
        android:textSize="14dp"
        app:layout_constraintTop_toTopOf="@id/first_1"
        app:layout_constraintLeft_toRightOf="@id/first_1"
        android:layout_marginLeft="10dp"
        android:text=""/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/third"
        android:textSize="14dp"
        app:layout_constraintTop_toTopOf="@id/first_1"
        app:layout_constraintLeft_toRightOf="@id/second"
        android:layout_marginLeft="10dp"
        android:text=""/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fourth"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@id/first_1"
        app:layout_constraintLeft_toLeftOf="@id/first_1"
        android:text=""/>

    <View android:layout_width="match_parent" android:layout_height="2dp"
          android:background="@color/gray"
          app:layout_constraintBottom_toBottomOf="parent"
           android:layout_marginTop="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>