<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <include layout="@layout/edit_item_layout"
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:id="@+id/edit_layout"/>

    <com.zeroner.bledemo.view.LSettingItem
        android:id="@+id/start_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:minHeight="45dp"
        app:isShowRightText="true"
        app:rightText=""
        app:leftText="@string/start_time"
    />


    <com.zeroner.bledemo.view.LSettingItem
        android:id="@+id/repeat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="45dp"
        app:isShowRightText="true"
        app:rightText=""
        app:leftText="@string/repeat"
    />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_marginTop="30dp"
        android:background="@android:color/white"
        android:textColor="@color/title_bar_color"
        android:gravity="center"
        android:textSize="17dp"
        android:id="@+id/delete_clock_btn"
    />

</LinearLayout>
