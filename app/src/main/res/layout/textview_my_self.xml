<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/dip_size_20">

    <TextView
        android:id="@+id/tv_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:text="平均步频"
        />
    <TextView
        android:id="@+id/tv_step_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="120 步/分钟"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toTopOf="@+id/tv_step"
        app:layout_constraintLeft_toRightOf="@+id/tv_step"
        />
    <TextView
        android:id="@+id/tv_touch_down_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="平均触地时间"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_step"
        />
    <TextView
        android:id="@+id/tv_touch_down_time_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:text="404 毫秒"
        app:layout_constraintTop_toTopOf="@+id/tv_touch_down_time"
        app:layout_constraintLeft_toRightOf="@+id/tv_touch_down_time"
        />

    <TextView
        android:id="@+id/tv_sky_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="平均腾空时间"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_touch_down_time"
        />
    <TextView
        android:id="@+id/tv_sky_time_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:text="404 毫秒"
        app:layout_constraintTop_toTopOf="@+id/tv_sky_time"
        app:layout_constraintLeft_toRightOf="@+id/tv_touch_down_time"
        />

    <TextView
        android:id="@+id/tv_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="平均垂直幅度"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_sky_time"
        />
    <TextView
        android:id="@+id/tv_vertical_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:text="404 毫秒"
        app:layout_constraintTop_toTopOf="@+id/tv_vertical"
        app:layout_constraintLeft_toRightOf="@+id/tv_touch_down_time"
        />

    <TextView
        android:id="@+id/tv_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="平均触地平衡"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_vertical" />
    <TextView
        android:id="@+id/tv_balance_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:text="50.0%-50.0%"
        app:layout_constraintTop_toTopOf="@+id/tv_balance"
        app:layout_constraintLeft_toRightOf="@+id/tv_touch_down_time"
        />

    <TextView
        android:id="@+id/tv_speeds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_balance"
        android:layout_marginTop="20dp"
        android:text="配速列表（分钟/公里）"
        />

    <TextView
        android:id="@+id/tv_speed_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_speeds"
        android:layout_marginTop="10dp"
        android:text="[0,0,0,0,0]"
        />

    <TextView
        android:id="@+id/tv_steps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_speed_list"
        android:layout_marginTop="20dp"
        android:text="步频（步/分钟）"
        />

    <TextView
        android:id="@+id/tv_steps_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_steps"
        android:layout_marginTop="10dp"
        android:text="[0,0,0,0,0]"
        />

    <TextView
        android:id="@+id/tv_verticals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_steps_list"
        android:layout_marginTop="20dp"
        android:text="垂直幅度（厘米）"
        />

    <TextView
        android:id="@+id/tv_verticals_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_verticals"
        android:layout_marginTop="10dp"
        android:text="[0,0,0,0,0]"
        />

    <TextView
        android:id="@+id/tv_touch_down_times"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_verticals_list"
        android:layout_marginTop="20dp"
        android:text="触地时间（毫秒）"
        />

    <TextView
        android:id="@+id/tv_touch_down_times_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_touch_down_times"
        android:layout_marginTop="10dp"
        android:text="[0,0,0,0,0]"
        />

</androidx.constraintlayout.widget.ConstraintLayout>